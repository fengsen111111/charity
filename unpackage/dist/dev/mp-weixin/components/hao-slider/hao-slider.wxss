/* 水平间距 */
.hao-slider {
  position: relative;
  display: flex;
  align-items: center;
}
.hao-slider-top {
  height: 100%;
  border-radius: 10rpx;
}
.hao-slider-block {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.hao-slider-currentValue {
  position: absolute;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  color: #4867CF;
  padding: 6rpx 10rpx;
  border-radius: 8rpx;
}

